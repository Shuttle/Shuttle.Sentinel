<cs-form title="datastore:add.title">
  <fieldset class="form-group">
    <cs-text focus="true" label="name" {(value)}="name" required="true" {errors}="errors" error-attribute="name"/>
    <cs-text focus="true" label="datastore:connection-string" {(value)}="connectionString" required="true" {errors}="errors" error-attribute="connectionString"/>
    <cs-text focus="true" label="datastore:provider-name" {(value)}="providerName" required="true" {errors}="errors" error-attribute="providerName"/>
    <cs-button-submit {click}="@add" text="add" />
    <cs-button {click}="@close" text="close" />
  </fieldset>
</cs-form>
