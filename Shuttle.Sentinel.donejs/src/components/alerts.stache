<div class="row">
  <div class="col-md-6 bd-content col-md-offset-3">
    {{#each alerts}}
    <div class="alert alert-{{type}}" role="alert">
      <button type="button" class="close" aria-label="Close" ($click)="destroy()">
        <span aria-hidden="true">&times;</span>
      </button>
      {{message}}
    </div>
    {{/each}}
  </div>
</div>
