<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
    <section name="sentinel" type="Shuttle.Sentinel.SentinelSection, Shuttle.Sentinel" />
    <section name="projection" type="Shuttle.Recall.Sql.EventProcessing.ProjectionSection, Shuttle.Recall.Sql.EventProcessing" />
  </configSections>

  <log4net>
    <appender name="RollingFileAppender" type="log4net.Appender.RollingFileAppender">
      <file value="logs\sentinel-event-processing" />
      <appendToFile value="true" />
      <rollingStyle value="Composite" />
      <maxSizeRollBackups value="10" />
      <maximumFileSize value="100000KB" />
      <datePattern value="-yyyyMMdd.'log'" />
      <param name="StaticLogFileName" value="false" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%d [%t] %-5p %c - %m%n" />
      </layout>
    </appender>
    <root>
      <level value="TRACE" />
      <appender-ref ref="RollingFileAppender" />
    </root>
    <logger name="Shuttle.Data" additivity="false">
      <level value="WARN" />
      <appender-ref ref="RollingFileAppender" />
    </logger>
  </log4net>

  <sentinel>
  </sentinel>

  <projection eventStoreConnectionStringName="Sentinel" eventProjectionConnectionStringName="Sentinel" />

  <connectionStrings>
    <clear />
    <add name="Sentinel" providerName="System.Data.SqlClient" connectionString="Data Source=.\sqlexpress;Initial Catalog=Sentinel;Integrated Security=SSPI;" />
  </connectionStrings>
<startup><supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5.1" /></startup>
  <runtime>
    <assemblyBinding xmlns="urn:schemas-microsoft-com:asm.v1">
      <dependentAssembly>
        <assemblyIdentity name="Castle.Windsor" publicKeyToken="407dd0808d44fbdc" culture="neutral" />
        <bindingRedirect oldVersion="0.0.0.0-3.4.0.0" newVersion="3.4.0.0" />
      </dependentAssembly>
    </assemblyBinding>
  </runtime>
</configuration>
